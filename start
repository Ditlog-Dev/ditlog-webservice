branch=$(git branch | grep -e "^*" | cut -d' ' -f 2)
echo "
===================== ðŸš€ Done ðŸš€ ===================
      Created by DitLog Performance
      branch : $branch
      Access your new links:
      ðŸŒŽ Web server: http://localhost:8080/
===================== ðŸš€ Done ðŸš€ ===================" && \
if [ "$1" != "background" ]; then
